
@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <p>姓名 : @Html.TextBox("name")@ViewBag.NameMessage</p>
    <p>帳號 : @Html.TextBox("account")@ViewBag.NameMessage</p>
    <p>密碼 : @Html.Password("password")@ViewBag.NameMessage</p>
    <p>@ViewBag.NameMessage</p>
    <input type="submit" value="註冊" />
}